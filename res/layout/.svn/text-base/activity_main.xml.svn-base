<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="30dip"
        android:src="@drawable/logo1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_ip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dip"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/txt_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_server"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dip"
        android:background="@drawable/ip_bg"
        android:gravity="center"
        android:paddingLeft="100dip"
        android:text="192.168.0.1"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/layout_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_name"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dip"
        android:background="@drawable/server_selector" >

        <TextView
            android:id="@+id/txt_server_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="225dip"
            android:drawablePadding="50dip"
            android:gravity="center_vertical"
            android:text="开启中"
            android:textColor="@drawable/text_color"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/img_server_state_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dip"
            android:src="@drawable/arrow_left_nolmal" />

        <ImageView
            android:id="@+id/img_server_state_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350dip"
            android:src="@drawable/arrow_right_nolmal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_logo"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dip"
        android:background="@drawable/name_selector" >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dip"
            android:drawablePadding="40dip"
            android:gravity="clip_vertical"
            android:textColor="@drawable/text_color"
            android:textSize="25sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50dip"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:paddingBottom="14dip"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25sp" />

</RelativeLayout>